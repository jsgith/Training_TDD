{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug CRA Tests", //CRA stands for create react app
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
        "args": [
          "test",
          "--runInBand",
          "--no-cache",
          "--env=jsdom",
          "--watchAll=false"
        ],
        "cwd": "${workspaceRoot}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }